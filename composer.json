{
    "name": "arodu/cakephp-sse",
    "description": "CakePHP plugin for handling Server-Sent Events (SSE)",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "cakephp/cakephp": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Sse\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sse\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "cakephp/plugin-installer": true
        }
    }
}